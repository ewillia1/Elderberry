<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-5dp"
    tools:layout_editor_absoluteY="-5dp">

    <TextView
        android:id="@+id/addMedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/elsie"
        android:text="@string/add_medication_title"
        android:textColor="@color/main"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="403dp"
        android:layout_height="94dp"
        app:counterEnabled="true"
        app:counterMaxLength="40"
        app:helperText="Required*"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/textHintColor"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elsie"
            android:hint="@string/medication_name"
            android:maxLength="50"
            android:textColor="@color/main"
            android:textColorHint="@color/main"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/from_image"
        android:layout_width="71dp"
        android:layout_height="54dp"
        android:contentDescription="@string/calendar_icon"
        android:onClick="openFromDatePicker"
        app:srcCompat="@drawable/calendar"
        tools:ignore="DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="145dp" />

    <ImageView
        android:id="@+id/time_picker"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:contentDescription="@string/clock_icon"
        app:srcCompat="@drawable/clock"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/selectFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/elsie"
        android:text="@string/from"
        android:textColor="@color/main"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/selectTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/elsie"
        android:text="@string/to"
        android:textColor="@color/main"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/elsie"
        android:text="@string/time"
        android:textColor="@color/main"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="281dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTimeBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/add_medication_item"
        android:src="@drawable/add_med_button"
        app:backgroundTint="@color/background"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="282dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteTimeBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/add_medication_item"
        android:src="@drawable/delete_med_button"
        app:backgroundTint="@color/background"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="282dp" />

    <ImageView
        android:id="@+id/to_image"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:contentDescription="@string/calendar_icon"
        android:onClick="openToDatePicker"
        app:srcCompat="@drawable/calendar"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="199dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_elderberryplant"
        android:fontFamily="@font/elsie"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="667dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_elderberryplant"
        android:fontFamily="@font/elsie"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="676dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout7"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="170dp"
        android:layout_height="99dp"
        app:counterEnabled="true"
        app:counterMaxLength="40"
        app:helperText="Required*"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/textHintColor"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="387dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elsie"
            android:hint="@string/unit"
            android:maxLength="50"
            android:textColor="@color/main"
            android:textColorHint="#78909C"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="130dp"
        android:layout_height="94dp"
        app:counterEnabled="true"
        app:counterMaxLength="40"
        app:helperText="Required*"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/textHintColor"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="392dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elsie"
            android:hint="@string/dose"
            android:maxLength="50"
            android:textColor="@color/main"
            android:textColorHint="#78909C"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout10"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="393dp"
        android:layout_height="87dp"
        app:counterEnabled="true"
        app:counterMaxLength="5000"
        app:endIconMode="clear_text"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="515dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elsie"
            android:hint="@string/information"
            android:maxLength="5000"
            android:textColor="@color/main"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02872777" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="419dp" />

</androidx.constraintlayout.widget.ConstraintLayout>